<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentSuccess"
    android:gravity="center"
    >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/bottom_menu" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Payment Successful!"
        android:textSize="28dp" />

    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"

            android:background="@drawable/successful" />

    </RelativeLayout>


    <TextView
        android:id="@+id/customerIDTV"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Customer ID not given. Please check with HorsePay."
        android:textSize="20dp" />

    <TextView
        android:id="@+id/customerID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_bold"
        android:textIsSelectable="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="Customer ID"
        android:textSize="24sp" />

    <Button
        android:id="@+id/return_main"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/buttom_radius"
        android:layout_below="@id/customerIDTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/main_blue"
        android:text="OK" />

</RelativeLayout>